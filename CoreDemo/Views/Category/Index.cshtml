@using Entity.Concrete
@model List<Category>
@{
    Layout = null;
}

<h1>Index</h1>
<link href ="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kategori Adı</th>
        <th>Durumu</th>
        <th>Detaylar</th>
        <th>Sil</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td>@item.Status</td>
            <td><a asp-controller="Category" asp-action="Get" asp-route-id="@item.CategoryId" class="btn btn-info" >Detaylar</a></td>
            <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn 
            btn-danger">Sil</a></td>
        </tr>
    }

</table>




