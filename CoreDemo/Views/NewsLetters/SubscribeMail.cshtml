<div class="tech-btm">
    <h4>Sign up to our newsletter</h4>
    <p>Sign up for our free email newsletter to be notified of new blogs. </p>
    <form method="post">
        <input id="mail" name="Mail" type="email" placeholder="Email" required="">
        <input id="submitNews" type="submit" value="Subscribe">
    </form>

</div>
<script src="https://code.jquery.com/jquery-3.6.1.min.js" ></script>
<script >
    $(document).ready(function () {
        $("#submitNews").click(function () {
            var mail = $("#mail").val();
            $.ajax({
               url: "/NewsLetters/SubscribeMail/",
                type: "POST",
                data: { Mail: mail },
                //success: function (result) {
                //    alert(result);
                //}
        });
    })});
</script>


 








