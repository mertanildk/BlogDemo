@using Entity.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var blog in Model)
                    {
                        <div class="col-lg-4 card">
                            <a asp-action="BlogDetails" asp-route-id="@blog.BlogId" asp-controller="Blogs" >
                                <img src="@blog.Image" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>@(((DateTime)blog.CreateDate).ToString("dd-MMM-yy"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i>0
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i>@blog.Category.CategoryName
                                        </a>
                                    </li>
                                </ul>
                                <h5 class="card-title">
                                    <a asp-action="BlogDetails" asp-route-id="@blog.BlogId" asp-controller="Blogs" >@blog.Title</a>
                                </h5>
                                <p class="card-text mb-3">@blog.Content.Substring(0,blog.Content.Substring(0,10).LastIndexOf(" "))... </p>
                                @*0.130 a kadar git karşılaştığın son boşluğun indexini döndür dedik.*@
                                <a asp-action="BlogDetails" asp-route-id="@blog.BlogId" asp-controller="Blogs" class="btn btn-primary read-m">Read More</a>
                            </div>
                        </div>
                    }
                </div>

                <!--//left-->
            </div>
        </div>
    </div>
</section>
