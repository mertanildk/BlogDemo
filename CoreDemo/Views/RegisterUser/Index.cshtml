@model Entities.Concrete.UserSignUpViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/adminPanel/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/adminPanel/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/adminPanel/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/adminPanel/css/animate.css" rel="stylesheet">
    <link href="~/adminPanel/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>
                
                <h2>Register</h2>

            </div>
            <p>Create account to see it in action.</p>
            <form class="m-t" role="form" asp-action="Index">
               @* <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name Surname" asp-for="NameSurname" >
                </div>
                <span asp-validation-for="NameSurname"></span>*@
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" asp-for="Mail" >
                </div>
                <span asp-validation-for="Mail"></span>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="User Name" asp-for="UserName" >
                </div>
                <span asp-validation-for="UserName"></span>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" >
                </div>
                <span asp-validation-for="Password"></span>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword">
                </div>
                <span asp-validation-for="ConfirmPassword"></span>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Agree the terms and policy </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Register</button>

                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login">Login</a>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/adminPanel/js/jquery-3.1.1.min.js"></script>
    <script src="~/adminPanel/js/popper.min.js"></script>
    <script src="~/adminPanel/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/adminPanel/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>
